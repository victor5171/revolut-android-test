<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.content.Context" />
        <variable
            name="icon"
            type="android.graphics.drawable.Drawable" />
        <variable
            name="currencyIdentifier"
            type="String" />
        <variable
            name="currencyName"
            type="String" />
        <variable
            name="formattedValue"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/item_horizontal_margin"
        android:layout_marginTop="@dimen/item_vertical_margin"
        android:layout_marginEnd="@dimen/item_horizontal_margin"
        android:layout_marginBottom="@dimen/item_vertical_margin"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgCurrencyIcon"
            android:layout_width="@dimen/currency_icon_size"
            android:layout_height="@dimen/currency_icon_size"
            android:contentDescription="@string/currency_icon_description"
            android:src="@{icon}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_eur" />

        <TextView
            android:id="@+id/txtCurrencyIdentifier"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/currency_icon_horizontal_margin"
            android:textColor="@color/currency_identifier_text_color"
            android:textSize="@dimen/currency_identifier_text_size"
            android:textStyle="bold"
            android:text="@{currencyIdentifier}"
            app:layout_constraintBottom_toTopOf="@id/txtCurrencyName"
            app:layout_constraintStart_toEndOf="@id/imgCurrencyIcon"
            app:layout_constraintEnd_toStartOf="@id/txtValue"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="AAAAAAAA" />

        <TextView
            android:id="@+id/txtCurrencyName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/currency_icon_horizontal_margin"
            android:textColor="@color/currency_name_text_color"
            android:textSize="@dimen/currency_name_text_size"
            android:text="@{currencyName}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/imgCurrencyIcon"
            app:layout_constraintEnd_toStartOf="@id/txtValue"
            app:layout_constraintTop_toBottomOf="@id/txtCurrencyIdentifier"
            tools:text="AAAAAAAAAAAAA" />

        <EditText
            android:id="@+id/txtValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/value_edittext_horizontal_margin"
            android:inputType="numberDecimal"
            android:textSize="@dimen/value_edittext_text_size"
            android:text="@{formattedValue}"
            android:hint="@string/hint_rate_value"
            app:layout_constraintStart_toEndOf="@id/txtCurrencyName"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="99999999.999.999.999" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>